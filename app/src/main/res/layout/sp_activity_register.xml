<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:id="@+id/activity_home"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
tools:context="com.app.temproject.shipper.Activity.Shipper.SPRegisterActivity">

<android.support.design.widget.AppBarLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:theme="@style/AppTheme.AppBarOverlay">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/AppTheme.PopupOverlay" />

</android.support.design.widget.AppBarLayout>

<ScrollView
    android:id="@+id/svRegister"
    android:padding="30dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingTop="20dp"
            android:text="@string/register_as_shipper"
            android:textColor="@color/GreenYellow"
            android:textSize="30dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="vertical"
            android:weightSum="1">

            <TextView
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/name" />

            <EditText
                android:id="@+id/etSP_Name"
                android:textStyle="italic"
                android:background="@drawable/border"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Nguyễn Huy Hoàng"
                android:hint="@string/name" />

            <TextView
                android:id="@+id/tvCheckShipperName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:text=""
                android:textColor="@color/Red"
                android:textSize="10sp"
                android:textStyle="bold" />


            <TextView
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/email" />

            <EditText
                android:id="@+id/etEmail"
                android:background="@drawable/border"
                android:layout_marginBottom="10dp"
                android:textStyle="italic"
                android:text="huyhoangk50@gmail.com"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:hint="@string/email" />
            <TextView
                android:id="@+id/tvCheckEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:text=""
                android:textColor="@color/Red"
                android:textSize="10sp"
                android:textStyle="bold" />

            <TextView
                android:textColor="#000000"
                android:textSize="20sp"
                android:layout_marginBottom="2dp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/password" />

            <EditText
                android:id="@+id/etSP_Password"
                android:background="@drawable/border"
                android:textStyle="italic"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:text="123456"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:hint="@string/password" />

            <TextView
                android:id="@+id/tvCheckPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:text=""
                android:textColor="@color/Red"
                android:textSize="10sp"
                android:textStyle="bold" />


            <TextView
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/confirm_password" />

            <EditText
                android:id="@+id/etConfirmPassword"
                android:background="@drawable/border"
                android:layout_marginBottom="10dp"
                android:textStyle="italic"
                android:text="123456"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:hint="@string/confirm_password" />

            <TextView
                android:id="@+id/tvCheckConfirmPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:text=""
                android:textColor="@color/Red"
                android:textSize="10sp"
                android:textStyle="bold" />


            <TextView
                android:textColor="#000000"
                android:textSize="20sp"
                android:layout_marginBottom="2dp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/phonenumber" />

            <EditText
                android:id="@+id/etPhoneNumber"
                android:background="@drawable/border"
                android:textStyle="italic"
                android:text="0987653456"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="date"
                android:hint="@string/phonenumber"
                android:layout_weight="0.05" />

            <TextView
                android:id="@+id/tvCheckPhoneNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:text=""
                android:textColor="@color/Red"
                android:textSize="10sp"
                android:textStyle="bold" />



            <TextView
                android:textColor="#000000"
                android:textSize="20sp"
                android:layout_marginBottom="2dp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/date_of_birth" />

            <EditText
                android:id="@+id/etDateOfBirth"
                android:background="@drawable/border"
                android:textStyle="italic"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="date"
                android:hint="@string/date_of_birth"
                android:text="2016-04-04"
                android:layout_weight="0.05" />

            <TextView
                android:id="@+id/tvCheckDateOfBirth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:text=""
                android:textColor="@color/Red"
                android:textSize="10sp"
                android:textStyle="bold" />



            <TextView
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/address" />

            <EditText
                android:id="@+id/etAddress"
                android:background="@drawable/border"
                android:textStyle="italic"
                android:layout_width="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content"
                android:text="Số 50 Tôn Thất Tùng"
                android:hint="@string/address" />

            <TextView
                android:id="@+id/tvCheckAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:text=""
                android:textColor="@color/Red"
                android:textSize="10sp"
                android:textStyle="bold" />


            <ImageView
                android:id="@+id/ivUpload"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_gravity="center"
                android:layout_weight="1" />

            <Button
                android:id="@+id/btnUpload"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/upload_image" />

            <fragment
                android:id="@+id/mapSPRegister"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:name="com.app.temproject.shipper.Fragment.Maps.MapsFragment" />

            <Button
                android:id="@+id/btnRegister"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/base_margin"
                android:text="@string/register" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
</LinearLayout>
